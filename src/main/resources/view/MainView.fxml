<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.111" stylesheets="@style/Dark.css"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.marapp.controllers.MainViewController">
    <top>
        <VBox prefHeight="15.0" prefWidth="1200.0" BorderPane.alignment="CENTER">
            <children>
                <MenuBar prefHeight="5.0" prefWidth="1200.0">
                    <menus>
                        <Menu mnemonicParsing="false" text="%menu.file">
                            <items>
                                <MenuItem mnemonicParsing="false" text="%menuItem.closeBtn" onAction="#closeApp"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="%menu.statistics"/>
                        <Menu mnemonicParsing="false" text="%menu.help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="%menuItem.about" onAction="#handleAbout"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </children>
        </VBox>
    </top>
</BorderPane>
